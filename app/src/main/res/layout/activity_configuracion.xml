<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding_horizontal_conf"
    android:paddingVertical="@dimen/padding_vertical_conf"
    android:weightSum="100"
    tools:context="com.iglesias.c.appgym.Activity.ConfiguracionActivity">

    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="@string/str_title_dispositivo_conexion"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_label" />

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/id_cardview_dispoditivo"
        android:paddingVertical="@dimen/padding_vertical_conf"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/cardview_radius"
        card_view:cardElevation="@dimen/cardview_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="@dimen/padding_vertical_conf"
            android:paddingHorizontal="@dimen/padding_vertical_conf"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/id_txt_nombre_dispositivo_conexion"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_label"
                android:layout_height="wrap_content"
                android:text="H - 05"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/id_txt_mac_dispositivo_conexion"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_label"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_txt_nombre_dispositivo_conexion"
                android:gravity="center_vertical"
                android:text="3156052415" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/id_cardview_settings"
        android:paddingVertical="@dimen/padding_vertical_conf"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/cardview_radius"
        card_view:cardElevation="@dimen/cardview_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="@dimen/padding_vertical_conf"
            android:paddingHorizontal="@dimen/padding_vertical_conf"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/id_txt_settings"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_label"
                android:layout_height="wrap_content"
                android:text="Abrir menú de configuración"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
