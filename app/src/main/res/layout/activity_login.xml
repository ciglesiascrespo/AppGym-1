<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:tools="http://schemas.android.com/tools"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.iglesias.c.appgym.Activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="horizontal">
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"/>
            <ImageView
                android:id="@+id/imagen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:scaleType="centerCrop"
                android:src="@drawable/header_fitnesspeople"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/login_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:orientation="horizontal"
        android:weightSum="100"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/digite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/bienvenido"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="55sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/cedula"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:hint="@string/cedula"
                android:inputType="none"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textColorLink="@color/colorAccent"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/id_txt_estado_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_top_recycler"
                android:layout_marginTop="@dimen/margin_top_recycler"
                android:text=""
                android:textSize="@dimen/text_size_label" />

            <TextView
                android:id="@+id/id_txt_sucursal_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_top_recycler"
                android:layout_marginTop="@dimen/margin_top_recycler"
                android:text=""
                android:textSize="@dimen/text_size_label" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50">

            <android.support.v7.widget.GridLayout
                xmlns:grid="http://schemas.android.com/apk/lib/android.support.v7.widget.GridLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                grid:columnCount="3"
                grid:rowCount="4">

                <Button
                    android:id="@+id/numero_1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    app:layout_rowWeight="1"
                    android:linksClickable="true"
                    android:onClick="pressNumber"
                    android:text="@string/str_1"
                    android:theme="@style/Buttton_Login"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/numero_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    app:layout_rowWeight="1"
                    android:linksClickable="true"
                    android:onClick="pressNumber"
                    android:text="@string/str_2"
                    android:theme="@style/Buttton_Login" />

                <Button
                    android:id="@+id/numero_3"

                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    app:layout_rowWeight="1"
                    android:linksClickable="true"
                    android:onClick="pressNumber"
                    android:text="@string/str_3"
                    android:theme="@style/Buttton_Login" />

                <Button
                    android:id="@+id/numero_4"

                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="1"

                    app:layout_rowWeight="1"

                    android:linksClickable="true"
                    android:onClick="pressNumber"
                    android:text="@string/str_4"
                    android:theme="@style/Buttton_Login" />

                <Button
                    android:id="@+id/numero_5"

                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="1"

                    app:layout_rowWeight="1"

                    android:linksClickable="true"
                    android:onClick="pressNumber"
                    android:text="@string/str_5"
                    android:theme="@style/Buttton_Login" />

                <Button
                    android:id="@+id/numero_6"

                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="1"

                    app:layout_rowWeight="1"

                    android:linksClickable="true"
                    android:onClick="pressNumber"
                    android:text="@string/str_6"
                    android:theme="@style/Buttton_Login" />

                <Button
                    android:id="@+id/numero_7"

                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="2"
                    app:layout_rowWeight="1"
                    android:linksClickable="true"
                    android:onClick="pressNumber"
                    android:text="@string/str_7"
                    android:theme="@style/Buttton_Login" />

                <Button
                    android:id="@+id/numero_8"

                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="2"
                    app:layout_rowWeight="1"
                    android:linksClickable="true"
                    android:onClick="pressNumber"
                    android:text="@string/str_8"
                    android:theme="@style/Buttton_Login" />


                <Button
                    android:id="@+id/numero_9"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="2"
                    app:layout_rowWeight="1"
                    android:linksClickable="true"
                    android:onClick="pressNumber"
                    android:text="@string/str_9"
                    android:theme="@style/Buttton_Login" />

                <Button
                    android:id="@+id/numero_0"

                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="3"
                    app:layout_rowWeight="1"

                    android:linksClickable="true"
                    android:onClick="pressNumber"
                    android:text="@string/str_0"
                    android:theme="@style/Buttton_Login" />


                <Button
                    android:id="@+id/sign_in"

                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="3"
                    app:layout_rowWeight="1"
                    android:linksClickable="true"
                    android:onClick="onClickValidateUser"
                    android:text="@string/str_ir"
                    android:theme="@style/Buttton_Login"
                    android:textSize="30sp"/>


                <Button
                    android:id="@+id/borrar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="3"
                    app:layout_rowWeight="1"
                    android:linksClickable="true"
                    android:onClick="deleteChar"
                    android:text="@string/str_x"
                    android:theme="@style/Buttton_Login"
                    android:textSize="30sp"/>

            </android.support.v7.widget.GridLayout>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>